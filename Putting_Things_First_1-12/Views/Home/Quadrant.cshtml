@{
    ViewData["Title"] = "Quadrant Page";
}
  @model List<TaskEntry>

<div class="container mt-4">
    <h1 class="text-center mb-4">Time Management Matrix</h1>
    <div class="row text-center">
        <!-- Quadrant I: Important / Urgent -->
        <div class="col-md-6 mb-4">
            <div class="p-3 border bg-light">
                <h2>Quadrant I</h2>
                <p>Important and Urgent</p>
              
                <table class="table table-bordered">
                    <thead class="fw-bold">
                        <tr>
                            <td>Category</td>
                            <td>Title</td>
                            <td>Due Date</td>
                            <td>Quadrant</td>
                            <td>Completed?</td>

                        </tr>
                    </thead>
                    @foreach (var x in Model)
                    {
                        <tbody>
                            <tr>
                                <td>@x.Category?.CategoryName</td>
                                <td>@x.TaskTitle</td>
                                <td>@x.DueDate</td>
                                <td>@x.Quadrant</td>
                                <td>@x.Completed</td>
                                <td><a class="btn btn-info" asp-controller="Home" asp-action="Update" asp-route-id="@x.TaskId">Edit</a></td>
                                <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.TaskId">Delete</a></td>

                            </tr>
                        </tbody>
                    }
                </table>

            </div>
