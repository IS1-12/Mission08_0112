@{
    ViewData["Title"] = "Enter Task";
}
@model TaskEntry

<h1 class="center">@ViewData["Title"]</h1>
 
<br /><br />

<form method="post">
    <input asp-for="TaskId" type="hidden" />
    <div class="containter">
        <div class="row gy-3">
            <div class="col-6 td_right">
                <label asp-for="TaskTitle">Task</label>
            </div>
            <div class="col-6 td_left">
                <input class="nicer-input" required asp-for="TaskTitle" />
            </div>
            <div class="col-6 td_right">
                <label asp-for="DueDate">Due Date</label>
            </div>
            <div class="col-6 td_left">
                <input class="nicer-input" type="date" asp-for="DueDate" />
            </div>
            <div class="col-6 td_right">
                <label asp-for="Quadrant">Quadrant</label>
            </div>
            <div class="col-6 td_left">
                <select class="nicer-input" required asp-for="Quadrant">
                    <option value="">Select a quadrant</option>
                    <option value="1">Urgent and Important</option>
                    <option value="2">Not Urgent but Important</option>
                    <option value="3">Urgent but Not Important</option>
                    <option value="4">Not Urgent and Not Important</option>
                </select>
            </div>
            <div class="col-6 td_right">
                <label asp-for="CategoryId">Category</label>
            </div>
            <div class="col-6 td_left">
                <select class="nicer-input" asp-for="CategoryId">
                    <option value="">Select a category</option>
                    @foreach (Category c in ViewBag.Categories)
                    {
                    <option value="@c.CategoryId">@c.CategoryName</option>
                    }
                </select>
            </div>
            <div class="col-6 td_right">
                <label asp-for="Completed">Completed</label>
            </div>
            <div class="col-6 td_left">
                <input type="radio" value="false" checked asp-for="Completed" name="Completed" />No
                <input type="radio" value="true" asp-for="Completed" name="Completed" />Yes
            </div>
            <div class="col-12" style="align-items:center"><button class="btn btn-center btn-info" type="submit">Submit</button></div>
        </div>
    </div>
</form>

<br /><br />
